<% @title = 'Change Password' %>

<header class="container-fluid">
  <div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
         <h1><%= @title %></h1>
      </div>
    <div class="col-md-2"></div>
  </div>
</header>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
     <div class="table-responsive">
        <%= form_for @change_password_form, url: :staff_password, method: :patch do |f|  %>
        <div class="form-group">
           <div>
            <%= f.label :current_password, "Current Password" %>
            <%= f.password_field :current_password, size: 32, required: true %>
           </div>
           <div>
            <%= f.label :new_password, "New Password" %>
            <%= f.password_field :new_password, size: 32, required: true %>
           </div>
           <div>
          <%= f.label :new_password_confirmation, "New Password Confirmation" %>
          <%= f.password_field :new_password_confirmation, size: 32, required: true %>
           </div>
           <div class="buttons">
              <%= f.submit 'Submit' %>
              <%= link_to 'Cancel', :staff_account  %>
           </div>
        </div>
       <% end %>
     </div>
  </div>
</div>
